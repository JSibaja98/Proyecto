<%- include('partials/_header') %>
    <form action="/send-email" method="POST">
        <section class=" section section--contact">

            <h2 class=" section__label">Nombre</h2>
            <input type="text" required name="nombre" class="section__data" />

            <h2 class="section__label">Email</h2>
            <input type="email" required name="email" class="section__data" />

            <h2 class="section__label">Telefono</h2>
            <input type="number" required name="telefono" class="section__data" />

            <h2 class="section__label">Consulta</h2>
            <input type="text" required name="consulta" class="section__data" />

            <h2 class="section__label"> Comentario</h2>
            <textarea required name="comentario" class="section__data"></textarea>

            <button class="btn btn-success section__btn">Enviar</button>



        </section>
    </form>



    <%- include('partials/_footer') %>